{
  "include": [
    "./src/**/*",
    "./src/custom.d.ts",
    "tailwind.config.js", 
    "postcss.config.js"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "noImplicitAny": false
  }
}
